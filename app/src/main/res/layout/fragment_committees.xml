<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Flickers Committees"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView17"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fund Raising: "
            android:id="@+id/textView18"
            android:textStyle="bold"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Responsible for Providing Flickers with academic and cash sponsors, Making and upgrading the benefit  packages, and Monitoring the implementation and the execution of the benefit packages"
            android:id="@+id/textView19"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Human Resource: "
            android:id="@+id/textView20"
            android:textStyle="bold"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="It&apos;s a master committee in Flickers which is responsible for Recruitment , selection , Training and Motivation plan and making the Performance Appraisal for all Flickers team."
            android:id="@+id/textView21"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Public Relations: "
            android:id="@+id/textView22"
            android:textStyle="bold"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="It is Flickers image inside and outside the faculty ,responsible for communicating with the students and  all Flickers stakeholders and also responsible for offline marketing for any event or program."
            android:id="@+id/textView23"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Media"
            android:id="@+id/textView24"
            android:textStyle="bold"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Responsible for using their creativity in designing any material wether it is published online or offline. "
            android:id="@+id/textView25"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Logistics and Reception: "
            android:id="@+id/textView26"
            android:textStyle="bold"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Responsible for providing any needed materials, transportation for any event or program with the  highest quality and lowest price and also responsible for providing catering sponsors."
            android:id="@+id/textView27"
            android:paddingTop="5dp" />
    </LinearLayout>

</ScrollView>
